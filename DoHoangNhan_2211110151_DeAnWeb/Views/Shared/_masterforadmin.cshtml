@{
    ViewBag.Title = "_masterforadmin";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style type="text/css">
    body {
        background-color: #f4f6f9;
        background-image: url("/Content/image/workplace-with-blue-office-supplies.jpg");
    }

    header {
        background-color: #153ae8;
        padding: 15px 0;
        color: white;
    }

        header h3 {
            font-weight: bold;
            font-size: 24px;
            margin: 0;
        }

    .sidebar {
        background-color: #1fadff;
        padding: 20px;
        color: #ecf0f1;
        border-radius: 20px;
        height: 30%;
    }

        .sidebar .nav-item {
            margin-bottom: 10px;
        }

        .sidebar .nav-link {
            color: #ecf0f1 !important;
            font-weight: 500;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

            .sidebar .nav-link:hover {
                background-color: #1abc9c;
                color: #ffffff !important;
            }

            /* Style for active link */
            .sidebar .nav-link.active {
                background-color: #1abc9c !important;
                color: #ffffff !important;
            }

    .content {
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .content-header {
        font-weight: bold;
        font-size: 22px;
        color: #2c3e50;
    }

    .btn-outline-light {
        border-color: #ffffff;
        color: #ffffff;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-light:hover {
            background-color: #ecf0f1;
            color: #2c3e50;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <header class="col-12">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <h3>XIN CHÀO @Session["EMAIL"].ToString() - TRANG QUẢN TRỊ</h3>
                    <div>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light me-2">Trang Chủ HBmarket</a>
                        <a href="@Url.Action("Login", "Administrator")" class="btn btn-outline-light">Logout</a>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="row">
        <div class="col-md-2 sidebar">
            <nav class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "QuanLySanPham" ? "active" : "")" href="@Url.Action("Index", "QuanLySanPham")">
                        <i class="fas fa-boxes"></i> QUẢN TRỊ SẢN PHẨM
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "QuanLyLoaiSanPham" ? "active" : "")" href="@Url.Action("Index", "QuanLyLoaiSanPham")">
                        <i class="fas fa-tags"></i> QUẢN TRỊ LOẠI SẢN PHẨM
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "QuanLyHoaDon" ? "active" : "")" href="@Url.Action("Index", "QuanLyHoaDon")">
                        <i class="fas fa-file-invoice-dollar"></i> QUẢN TRỊ HÓA ĐƠN
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "QuanLyHoaDonChiTiet" ? "active" : "")" href="@Url.Action("Index", "QuanLyHoaDonChiTiet")">
                        <i class="fas fa-receipt"></i> QUẢN TRỊ HÓA ĐƠN CHI TIẾT
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "QuanLyAccount" ? "active" : "")" href="@Url.Action("Index", "QuanLyAccount")">
                        <i class="fas fa-user-cog"></i> QUẢN TRỊ TÀI KHOẢN
                    </a>
                </li>


            </nav>
        </div>

        <div class="col-md-9 content">
            <div class="content-header">
                @RenderSection("PageHeader", required: false)
            </div>
            <div class="content-body">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
