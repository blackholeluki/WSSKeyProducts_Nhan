@model DoHoangNhan_2211110151_DeAnWeb.Models.TBL_SANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_masterforadmin.cshtml";
}

<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
<script type="text/javascript" src="~/Content/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="~/Content/ckfinder/ckfinder.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h2><strong>CẬP NHẬT THÔNG TIN SẢN PHẨM</strong></h2>
                <br />
            </div>
            <h3><strong><span style="color:red">@ViewData["TRANGTHAICAPNHAT"]</span></strong></h3>
        </div>
        <div>
            @using (Html.BeginForm("Edit", "QuanLySanPham", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(model => model.IDSP)
                <table class="table table-bordered">
                    <tr>
                        <td>Nhập Mã SP</td>
                        <td>
                            @Html.TextBoxFor(model => model.MASP, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MASP, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nhập tên SP</td>
                        <td>
                            @Html.TextBoxFor(model => model.TENSP, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>Tháng</td>
                        <td>
                            @Html.TextBoxFor(model => model.THANG, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nội dung mô tả về sản phẩm</td>
                        <td>
                            @Html.TextAreaFor(model => model.NOIDUNG_MOTA_SANPHAM, new { @class = "ckeditor" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nhập giá tiền</td>
                        <td>
                            @Html.TextBoxFor(model => model.GIATIEN, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.GIATIEN, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nhập số lượng</td>
                        <td>
                            @Html.TextBoxFor(model => model.SO_LUONG_TON_TRONG_KHO, new { @class = "form-control", id = "SO_LUONG_TON_TRONG_KHO" })
                            @Html.ValidationMessageFor(model => model.SO_LUONG_TON_TRONG_KHO, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>Nhập Mã key hoặc tài khoản</td>
                        <td>
                            <div id="keysContainer">
                                @Html.TextBoxFor(model => model.MAKEY, new
     {
         @class =
    "form-control"
     })
                                @Html.ValidationMessageFor(model => model.MAKEY, "",
                               new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label class="control-label">HÌNH ĐẠI DIỆN</label>
                        </td>
                        <td>
                         
                            @Html.EditorFor(model => model.HINH_DAI_DIEN, new { htmlAttributes = new { @class = "form-control", @id = "txt_hinhdaidien" } })
                            @Html.ValidationMessageFor(model => model.HINH_DAI_DIEN, "", new { @class = "text-danger" })
                            <input id="btn_hinhdaidien" type="button" value="browse" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input class="btn btn-success" value="Cập nhật" type="submit" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("QUAY LẠI TRANG CHỦ", "Index", null, new { @class = "btn btn-primary" })
</div>

<script type="text/javascript">
    $("#btn_hinhdaidien").click(function () {
        var ckfin = new CKFinder();
        ckfin.selectActionFunction = function (fileUrl) {
            $("#txt_hinhdaidien").val(fileUrl);
        };
        ckfin.popup();
    });

</script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#SO_LUONG_TON_TRONG_KHO').on('change', function () {
                var numberOfKeys = $(this).val();
                $('#keysContainer').empty(); // Clear the old input fields

                for (var i = 0; i < numberOfKeys; i++) {
                    $('#keysContainer').append(`
                    <div class="key-input">
                        <label for="key${i}">Mã Key ${i + 1}</label>
                        <input type="text" id="key${i}" name="keys[]" class="form-control" required />
                    </div>
                `);
                }
            });
    });
</script>

